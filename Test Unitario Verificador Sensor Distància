#define TRIG 8
#define ECHO 9

void setup() {
  Serial.begin(9600);
  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}

void loop() {
  digitalWrite(TRIG, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG, LOW);

  long duracio = pulseIn(ECHO, HIGH);
  long dist = duracio * 0.034 / 2;
  Serial.print("Distancia: ");
  Serial.print(dist);
  Serial.println(" cm");
  delay(1000);
}
